<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/location_details_id_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1"/>

    <TextView
        android:id="@+id/location_details_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Citadel of Ricks"/>

    <TextView
        android:id="@+id/location_details_type_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Space station"/>

    <TextView
        android:id="@+id/location_details_dimension_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Unknown"/>

    <TextView
        android:id="@+id/location_details_created_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2017-11-012"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/location_details_characters_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"/>

</LinearLayout>