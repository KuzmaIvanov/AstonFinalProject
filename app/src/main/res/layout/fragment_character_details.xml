<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/character_details_image_view"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:contentDescription="@string/character_details_image_description" />

            <TextView
                android:id="@+id/character_details_id_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1"/>

            <TextView
                android:id="@+id/character_details_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Morty Smith"/>

            <TextView
                android:id="@+id/character_details_status_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Alive"/>

            <TextView
                android:id="@+id/character_details_species_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Human"/>

            <TextView
                android:id="@+id/character_details_type_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Some type"/>

            <TextView
                android:id="@+id/character_details_gender_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Male"/>

            <TextView
                android:id="@+id/character_details_origin_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Earth"/>


            <TextView
                android:id="@+id/character_details_location_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Earth"/>

            <TextView
                android:id="@+id/character_details_created_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2017-11-04T18:50:21.651Z"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/character_details_episodes_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

</LinearLayout>